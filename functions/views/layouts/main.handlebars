        integrity="sha256-VeNaFBVDhoX3H+gJ37DpT/nTuZTdjYro9yBruHjVmoQ=" crossorigin="anonymous"></script>


    {{#if SHOP_DOMAIN}}
    <script type="text/javascript">
        var shop_domain = '{{SHOP_DOMAIN}}'
        console.log('ShopDomain present');
        console.log('ShopDomain : ' + shop_domain);
        setTimeout(function () {
            ShopifyApp.init({
                apiKey: '{{ SHOPIFY_API_KEY }}',
                shopOrigin: 'https://{{ SHOP_DOMAIN }}',
                debug: true
            });
            var buttonsToUse = {
                primary: []
            };


            ShopifyApp.ready(function () {
                ShopifyApp.Bar.initialize({
                    title: '',
                    buttons: buttonsToUse
                });
            });

        }, 1000);
    </script>
    {{/if}}
</head>

<body>
    <main class="container">
        {{{body}}}
    </main>
</body>

</html>